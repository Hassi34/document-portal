{
  "family": "documentportaltd",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "8192",
  "executionRoleArn": "arn:aws:iam::809948819797:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "document-portal-container",
      "image": "809948819797.dkr.ecr.us-east-2.amazonaws.com/documentportal",
      "cpu": 1024,
      "essential": true,
      "portMappings": [
        { "containerPort": 8080, "hostPort": 8080, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "ENV", "value": "production" },
        { "name": "REDIS_URL", "value": "redis://localhost:6379" }
      ],
      "secrets": [
        {
          "name": "API_KEYS",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:809948819797:secret:document_portal-vTMZ38"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/documentportaltd",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "document-portal-app",
          "awslogs-create-group": "true"
        }
      }
    },
    {
      "name": "redis",
      "image": "redis/redis-stack:7.2.0-v18",
      "essential": true,
      "portMappings": [
        { "containerPort": 6379, "hostPort": 6379, "protocol": "tcp" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/documentportaltd",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "redis",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "redis-cli ping || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 5,
        "startPeriod": 10
      }
    }
  ]
}
