{
  "family": "documentportaltd",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::809948819797:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::809948819797:role/ecsTaskExecutionRole",
  "ephemeralStorage": { "sizeInGiB": 21 },
  "containerDefinitions": [
    {
      "name": "document-portal-container",
      "image": "809948819797.dkr.ecr.us-east-2.amazonaws.com/documentportal",
      "cpu": 1024,
      "memory": 2048,
      "essential": true,
      "portMappings": [
        { "containerPort": 8080, "protocol": "tcp" }
      ],
      "mountPoints": [
        { "sourceVolume": "document-portal-data-vol", "containerPath": "/app/data", "readOnly": false },
        { "sourceVolume": "document-portal-logs-vol", "containerPath": "/app/logs", "readOnly": false }
      ],
      "environment": [
  { "name": "ENV", "value": "production" }
      ],
      "secrets": [
        {
          "name": "API_KEYS",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:809948819797:secret:document_portal-vTMZ38"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/documentportaltd",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "document-portal-app",
          "awslogs-create-group": "true"
        }
      },
      "readonlyRootFilesystem": false
    }
  ],
  "volumes": [
    {
      "name": "document-portal-data-vol",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0446d38beddbf7c70",
        "authorizationConfig": { "accessPointId": "fsap-0ea97ccd7a64f3146", "iam": "ENABLED" },
        "rootDirectory": "/",
        "transitEncryption": "ENABLED"
      }
    },
    {
      "name": "document-portal-logs-vol",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0446d38beddbf7c70",
        "authorizationConfig": { "accessPointId": "fsap-0e8c8b3c63f08f0db", "iam": "ENABLED" },
        "rootDirectory": "/",
        "transitEncryption": "ENABLED"
      }
    }
  ]
}
